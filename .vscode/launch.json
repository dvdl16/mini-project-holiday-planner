    "version": "0.2.0",
    "configurations": [
        {
          "name": "Python Debugger: Django",
          "type": "debugpy",
          "request": "launch",
          "program": "${workspaceFolder}/manage.py",
          "args": ["runserver"],
          "django": true,
          "justMyCode": true,
          "python": "${workspaceFolder}/.venv/bin/python",
        },
        {
          "name": "Python Debugger: Run Migrations",
          "type": "debugpy",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "program": "${workspaceFolder}/manage.py",
          "args": ["migrate"],
          "django": true,
          "justMyCode": true,
          "python": "${workspaceFolder}/.venv/bin/python",
        },
        {
          "name": "Python Debugger: Run Integration Tests",
          "type": "debugpy",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "program": "${workspaceFolder}/manage.py",
          "args": ["test"],
          "django": true,
          "justMyCode": true,
          "python": "${workspaceFolder}/.venv/bin/python",
        }
      ]
}